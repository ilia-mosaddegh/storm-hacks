{
  "compilerOptions": {
    /* Language */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Interop / imports */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Misc */
    "noEmitOnError": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
